<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    android:background="@drawable/degradado"
    android:orientation="vertical">



    <Button
        android:id="@+id/botonconf"
        android:layout_width="355dp"
        android:layout_height="200px"
        android:textSize="16dp"
        android:background="@drawable/boton"
        android:onClick="ConfirmarRegistro"
        android:text="Confirmar registro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="200dp"
        android:textColor="@drawable/txtboton" />


    <EditText
        android:layout_above="@id/botonconf"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/botonconf"
        android:layout_marginBottom="22dp"
        android:paddingLeft="10dp"
        android:textColor="@drawable/txtboton"
        android:background="@drawable/edittext"
        android:id="@+id/Edad"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:hint="Edad"
        android:inputType="number"
        />

    <EditText

        android:layout_above="@id/Edad"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/Edad"
        android:layout_marginBottom="22dp"
        android:paddingLeft="10dp"
        android:textColor="@drawable/txtboton"
        android:background="@drawable/edittext"
        android:id="@+id/NumTel"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:hint="Numero de telefono"
        android:inputType="number" />

    <EditText

        android:layout_above="@id/NumTel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/NumTel"
        android:layout_marginBottom="22dp"
        android:paddingLeft="10dp"
        android:textColor="@drawable/txtboton"
        android:background="@drawable/edittext"
        android:id="@+id/Nombre"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:hint="Nombre" />

    <EditText
        android:layout_above="@id/Nombre"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/Nombre"
        android:layout_marginBottom="22dp"
        android:paddingLeft="10dp"
        android:textColor="@drawable/txtboton"
        android:background="@drawable/edittext"
        android:id="@+id/Mail"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:hint="Mail" />

    <EditText

        android:layout_above="@id/Mail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/Mail"
        android:layout_marginBottom="22dp"
        android:paddingLeft="10dp"
        android:textColor="@drawable/txtboton"
        android:background="@drawable/edittext"
        android:id="@+id/Contrasen"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:hint="ContraseÃ±a"
        android:inputType="textPassword"/>


    <EditText

        android:layout_above="@id/Contrasen"
        android:id="@+id/NombreUsuario"
        android:layout_width="350dp"
        android:layout_height="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/Contrasen"
        android:layout_marginBottom="22dp"
        android:background="@drawable/edittext"
        android:hint="Nombre de usuario"
        android:paddingLeft="10dp"
        android:textColor="@drawable/txtboton" />





</android.support.constraint.ConstraintLayout>